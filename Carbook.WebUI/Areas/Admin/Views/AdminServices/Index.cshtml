@model List<ResultServiceDto>   
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count=0;
}

<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="Featured">
                    <div class="Featured-body">
                        <h4 class="card-title">Hizmet Bilgileri Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana sayfa ve hizmetler bölümünde yer alan hizmet listesinin admin tarafındaki işlemlerini aşağıdaki sayfadan gerçekleştirebilirsiniz. Tema bütünlüğünü korumak adına 4 tane hizmet girişi yapınız.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Başlık</th>
                                        <th>Açıklama</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@data.Title</td>
                                            <td>@data.Description</td>
                                            <td><a href="/Admin/AdminServices/DeleteServices/@data.ServicesId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/Admin/AdminServices/UpdateServices/@data.ServicesId" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                            <a href="/Admin/AdminServices/CreateServices/" class="btn btn-outline-primary">Yeni Hakkımızda Girişi</a>
                        </div>

                    </div>
                </div>

            </div>



        </div>

    </div>


