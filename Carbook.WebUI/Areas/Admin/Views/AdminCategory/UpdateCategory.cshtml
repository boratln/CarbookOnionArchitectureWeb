@model UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Kategori Güncelleme Sayfası</h4>
                        <p class="card-subtitle mb-4">Kategori ile ilgili bilgileri aşağıdaki kutucuklara girebilirsiniz. Veri girişinden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.</p>
                        <form method="post">
                            <input type="hidden" name="CategoryId" />
                            <div class="form-group">
                                <label for="exampleInputBrand">Başlık</label>
                                <input type="text" class="form-control" asp-for="Name" />
                            </div>
                         

                            <button type="submit" class="btn btn-primary waves-effect waves-light">Kategoriyi Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>

</div>

