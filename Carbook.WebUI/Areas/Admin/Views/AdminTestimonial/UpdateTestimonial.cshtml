@model UpdateTestimonialDto
@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Referans Sayfası Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Referans ekleme işleminin yapıldığı sayfamızdır. Bilgileri eksiksiz olarak doldurup kaydet butonuna tıklamanız yeterlidir.
                        </p>
                        <form method="post">
                            <input type="hidden" asp-for="TestimonialId" />
                            <div class="form-group">
                                <label for="exampleInputName">Referans Ad Soyad</label>
                                <input type="text" class="form-control" id="exampleInputName" asp-for="Name" placeholder="Referansın Ad ve Soyadını  Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputUrl">Referans Unvanı</label>
                                <input type="text" class="form-control" id="exampleInputUrl" asp-for="Title" placeholder="Referansın Unvanını  Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Referans Görseli</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="ImageUrl" placeholder="Referansın Görsel URL'ini  Giriniz">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIcon">Referans Yorumu</label>
                                <input type="text" class="form-control" id="exampleInputIcon" asp-for="Comment" placeholder="Referansın Yorumunu  Giriniz">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
                        </form>

                    </div>
                </div>

            </div>
        </div>

    </div>

</div>
