@model List<ResultCarPricingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/UILayout/Index.cshtml";
}

<section class="ftco-section bg-light">
    	<div class="container">
    		<div class="row">
            @foreach(var data in Model)
            {
                <div class="col-md-4">
                    <div class="car-wrap rounded ftco-animate">
                        <a href="/Car/CarDetail/@data.CarId">  <div class="img rounded d-flex align-items-end" style="background-image: url(@data.CoverImageUrl);">
                       
                    </div>
                        </a>
                        <div class="text">
                            <h2 class="mb-0"><a href="/Car/CarDetail/@data.CarId">@data.CarModel</a></h2>
                            <div class="d-flex mb-3">
                                <span class="cat">@data.BrandName</span>
                                <p class="price ml-auto">@data.Price ₺ <span> @data.PricingName</span></p>
                            </div>
                            <p class="d-flex mb-0 d-block"><a href="/Reservation/Index/@data.CarId" class="btn btn-primary py-2 mr-1">Hemen Kirala</a><a href="/Car/CarDetail/@data.CarId" class="btn btn-secondary py-2 ml-1">Detay</a></p>
                        </div>
                    </div>
                </div>
            }
         
    		
    		</div>
    
    	</div>
    </section>
