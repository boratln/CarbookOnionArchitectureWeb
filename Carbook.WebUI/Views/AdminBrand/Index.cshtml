@model List<ResultBrandDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}


<div class="page-content">
    <div class="container-fluid">

        <div class="row">
            <div class="col-xl-12">
                <div class="Featured">
                    <div class="Featured-body">
                        <h4 class="Featured-title">Araba Marka Listesi</h4>
                        <p class="Featured-subtitle mb-4">
                            Arabaların markalar listesi,markalar üzerinde düzenleme ve markayı kaldırma işlemini buradan gerçekleştirebilirsiniz.
                        </p>
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Marka İsmi</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                        <th>Markaya Ait Araçlar</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var data in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@data.Name</td>
                                            <td><a href="/AdminBrand/DeleteBrand/@data.BrandId" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@data.BrandId" class="btn btn-outline-success">Güncelle</a></td>
                                            <td><a href="/AdminBrand/UpdateBrand/@data.BrandId" class="btn btn-outline-secondary">Markaya Ait Araçlar</a></td>
                                        </tr>
                                    }


                                </tbody>
                            </table>
                            <a href="/AdminBrand/CreateBrand/" class="btn btn-outline-primary">Yeni Marka Girişi</a>
                        </div>

                    </div>
                </div>

            </div>



        </div>

    </div>


